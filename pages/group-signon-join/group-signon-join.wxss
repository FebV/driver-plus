/* group-signon.wxss */

.intro {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.signon-state {
  font-size: 0.75rem;
}
.group-rule-content {
  padding: 30rpx;
  font-size: 0.7rem;
  line-height: 50rpx;
}
.white-space {
  display: inline-block;
  width: 25rpx;
}
.group-desc-content {
  padding: 30rpx;
  font-size: 0.7rem;
}
.signon {
  /*width: 100%;*/
  
  bottom: 0px;
  display: flex;
  position: fixed;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 0;
  border: 0;
  padding-top: 20rpx;
}
.left-time-notice {
  font-size: 0.75rem;
}
.left-time {
  margin: 20rpx;
  font-size: 1rem;
}
.signon-btn {
  margin-top: 5rpx;
}
.small-line-word{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.group-rule-detail{
  margin-left: 20rpx;
}
.blue-border{
  border: 3rpx solid rgb(45, 157, 255);
  border-radius: 20rpx;
  padding: 5rpx 10rpx;
}
.round-pic{
  width:80rpx;
  height: 80rpx;
  border-radius: 60rpx;
}
.row-item{
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  height:120rpx;
  /* width:240rpx; */
  margin-right:30rpx;
}
.group-member{
  width: 95%;
  margin: 0 auto;

}

.share{
  font-size: 40rpx;
  color: white;
  background-color: rgb(45, 157, 255);
  height: 70rpx;
  width: 70rpx;
  line-height: 60rpx;
  display: inline-flex;
  border-radius: 60rpx;
  
  justify-content: space-between;
  align-items: center;
  
  position: fixed;
  top: 55vh;
  right: 0;
  padding: 0 15rpx;

}
.share::after{
  border: 0;
}
.share image{
  height: 40rpx;
  width: 40rpx;
  /* margin-right: 20rpx; */
}
.pd-bottom{
  padding-bottom: 17vh;
}

.row-name{
  height:120rpx;
  line-height:120rpx;
  float:left;
  margin-left: 15rpx;
}