/* group-signon.wxss */
.ground-image {
  padding: 3vw;
  width: 25vw;
  height: 20vw;
}
.ground-intro {
  vertical-align: top;
  color: gray;
}
.ground-intro-title {
  font-size: 0.8rem;
}
.ground-intro-content {
  font-size: 0.75rem;
}
.ground-intro-sign-num {
  font-size: 0.6rem;
}
.ground-image image {
  width: 100%;
  height: 100%;
}
.common-class-icon {
  display: inline-block;
  padding: 3vw;
  width: 10vw;
  height: 10vw;
}
.common-class-icon image {
  width: 100%;
  height: 100%;
  display: inline-block;
}
.common-class {
  display: flex;
  align-items: center;
}
.common-class-name {
  font-size: 0.75rem;
}
.common-class-price {
  margin-left: 40vw;
  background-color: rgb(45, 157, 255);
  padding: 10rpx;
  font-size: 0.6rem;
  color: white;
  border-radius: 10rpx;
}
.signon {
  width: 100%;
  bottom: 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.left-time-notice {
  font-size: 0.75rem;
}
.left-time {
  margin: 20rpx;
  font-size: 1rem;
}
.signon-btn {
  margin-top: 5rpx;
}