.score{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
}
.score-star{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.score-star image{
  width: 40rpx;
  height: 40rpx;
 margin-left: 30rpx; 
}
.score-title{
  height: 40rpx;
  line-height: 40rpx;
 margin: 0 30rpx; 
}
textarea{
  font-size: 30rpx;
  width: 100%;
  background-color: whitesmoke;
  line-height: 50rpx;
}
.sub-b{
  text-align: center;
}
.sub{
  height: 60rpx;
  background-color:rgb(45, 157, 255);
  line-height: 60rpx;
  text-align: center;
  display: inline-block;
  padding: 10rpx 130rpx;
  color: white;
  border-radius: 50rpx;
  margin: 40rpx auto;
}
textarea{
  height:400rpx;
}
