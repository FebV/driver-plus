/* practice-reservation.wxss */
.top-word{
  height: 70rpx;
  line-height: 70rpx;
  width: 85%;
  margin: 0 auto;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80rpx;
  align-items: center;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.circle{
  border: 5rpx solid rgb(45, 157, 255);
  border-radius: 50rpx;
  width: 50rpx;
  height: 50rpx;
  color: rgb(45, 157, 255);
  line-height: 50rpx;
}
.gray-circle{
   border: 5rpx solid gray;
  border-radius: 50rpx;
  background: gray;
   width: 50rpx;
  height: 50rpx;
  color: gray;
}
.th {
  width: 40%;
  justify-content: center;
  color: gray;
  display: flex;
  height: 3rem;
  align-items: center;
}
.active{
  color: white;
  background-color: rgb(45, 157, 255);
}
.small-gray-info{
  background: rgb(240, 240, 240);
}

.round-pic{
  width:120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.three-clum{
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
page{
  background: rgb(240, 240, 240);
}
.wrap{
  background: white;
}