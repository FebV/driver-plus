/* group-signon-join-pay.wxss */
.ground-image {
  padding: 3vw;
  width: 25vw;
  height: 20vw;
  vertical-align:top;

}
.ground-intro {
  vertical-align: top;
  color: gray;
}
.ground-intro-title {
  font-size: 0.8rem;
}
.ground-intro-content {
  font-size: 0.75rem;
}
.ground-intro-sign-num {
  font-size: 0.6rem;
}
.ground-image image {
  width: 100%;
  height: 100%;
}
.common-class-icon {
  display: inline-block;
  padding: 3vw;
  width: 10vw;
  height: 10vw;
}
.common-class-icon image {
  width: 100%;
  height: 100%;
  display: inline-block;
}
.common-class {
  display: flex;
  align-items: center;
}
.common-class-name {
  font-size: 0.75rem;
  width: 200rpx;
}
.common-class-price {
  margin-left: 30vw;
  background-color: rgb(45, 157, 255);
  padding: 10rpx;
  font-size: 0.6rem;
  color: white;
  border-radius: 10rpx;
}
.signon {
  width: 100%;
  bottom: 0px;
  display: flex;
  border: 0;
  margin: 0;
}
.left-time-notice {
  font-size: 0.75rem;
  text-align: center;
}
.left-time {
  margin: 20rpx;
  font-size: 0.75rem;
}
.signon-btn {
  margin-top: 5rpx;
}
.active-check {
    width: 0;
    height: 0;
    border-top: 40px solid transparent;
    border-right: 40px solid rgb(0, 150, 250);
    display: inline-block;
    position: absolute;
    right: 0;
    z-index: -1;
}
.active-check-icon{
  position: absolute;
  z-index: 111;
  bottom: 0;
  right: 0;
  
}
.active-check-box{
  display: inline-block;  
  float: right;
  position: absolute;
  bottom: 0;
  width:40px;
  height: 40px;
  right: 0;

}
.row{
  display: flex;
  flex-direction:  row;
  justify-content: space-around;
  align-items: center;
}

.select-area-image image {
  width: 100%;
  height: 100%;
}
.select-area-content {
  display: inline-block;
}
.select-area-name view,text{
  font-size: 30rpx;
  /* font-weight: bold; */
  display: inline-block;

}
.select-area-content{
  padding-top: 20rpx;
  line-height: 60rpx;
  max-width: 60vw;
}

.select-area-intro text{
  font-size: 30rpx;
  /* font-weight: bold; */
  color: #888888;
}