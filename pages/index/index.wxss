/**index.wxss**/

.rect-enter-group{
  column-count: 2;
  column-rule:  0.5px solid rgb(240, 240, 240);
  border: 0;
  margin: 0;
}
.rect-enter {
  /*border: 0.5px solid rgb(240, 240, 240);  */
  /*width: 50%;*/
  height: 12vh;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size: 33rpx;
}
.rect-enter image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}


.items-row {
  display: flex;
  justify-content: space-around;
  height: 150rpx;
  background-color: rgb(240, 240, 240);
  padding-bottom: 40rpx;
}

.items {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 30rpx;
  background-color: white;
  padding: 0 10rpx;
  border-radius: 20rpx;
  
}
.items image {
  width: 50rpx;
  height: 50rpx;

}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.three-column{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.kefu{
  width: 100rpx;
  height: 45rpx;
  position: fixed;
  right: 0;
  bottom: 30vh;
  border: 0;
  
}
.kefu button image{
  width: 100rpx;
  height: 45rpx;
  position: absolute;
  left: 0;
    border: 0;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
}
.kefu button{
  border: 0;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
}
.kefu button::after{
  border: 0;
}
.right{
 margin-left: 20rpx;
}
.right image{
  width: 40rpx;
  height: 40rpx;
}
.row-choice-g {
  /*width: 100%;*/
  border: 1px solid rgb(240, 240, 240);
  height: 8vh;
}
.row-w{
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: rgb(160, 160, 160);
  background-color: rgb(240, 240, 240);
}