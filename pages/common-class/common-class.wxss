.select-area-header image {
  width: 8vw;
  height: 8vw;
  margin: 1vw 3vw;
  vertical-align: middle;
  
}

.select-area-header text {
  font-size: 0.9rem;
  font-weight: bold;
}
.select-area-image {
  vertical-align: top;
  display: inline-block;
  background-color: black;
  width: 30vw;
  height: 25vw;
  margin: 2vw 5vw;
}
.select-area-image image {
  width: 100%;
  height: 100%;
}
.select-area-content {
  display: inline-block;
}
.select-area-name text{
  font-size: 0.75rem;
  font-weight: bold;
}
.serve-promise-content {
  padding: 0 20rpx;
}
.select-area-intro text{
  font-size: 0.7rem;
  font-weight: bold;
  color: #888888;
}
.serve-promise-content {
  font-size: 0.8rem;
  line-height: 50rpx;
  color: #888888;
}