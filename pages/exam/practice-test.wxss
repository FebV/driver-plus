.round{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 3rpx solid lightgray;
  border-radius: 50rpx;
  text-align: center;
}
.round-right{
  border: 3rpx solid  #4cd964;
  background-color:  #4cd964;
  color: white;
}

.round-active{
  border: 3rpx solid rgb(45, 157, 255);  
 background-color: rgb(45, 157, 255);
  color: white;
}

.fixed{
position: fixed;
  bottom: 0;
   height: 100rpx;
  width: 100%;
  border: 0;
  margin: 0;
  border-top: 3rpx solid lightgrey;
}
.flex-bottom{
  
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;

}
.inner-word{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  margin-left: 5rpx;
}
.each-option{
  display: flex;
  flex-direction: row;
  
}