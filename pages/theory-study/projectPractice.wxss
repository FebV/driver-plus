.topline{
  height: 1rpx;
  background-color: #f1f1f1;
}
.wrapper{
  width: 90%;
  margin: 60rpx auto 0;
}
.line{
  column-count: 2;
  column-gap: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f1f1f2;
}
.block{
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
}
.left{
  border-right: 1rpx solid #f1f1f2;
}
.block>view:nth-child(1){
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.block>view:nth-child(2){
    flex: 3;
    text-align: center;
}
.block>view:nth-child(3){
    flex: 2;
}
.number{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
  color: #ffffff;
}

.blue{
  background-color: #25c8da;
}
.orange{
  background-color: #faa912;
}