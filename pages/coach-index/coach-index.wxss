/* coach-index.wxss */
.coach-banner {
  height: 20vh;
  width: 100%;
}
.coach-name {
  display: block;
  position: absolute;
  z-index: 1;
  top: 5vh;
  color: white;
  margin-left: 50%;
  transform: translateX(-50%);
}
.head_image {
  width: 20vh;
  height: 20vh;
  margin-top: -10vh;
  margin-left: 50%;
  transform: translateX(-50%);
  z-index: 1;
}
.intro-row {
  padding: 30rpx;
  display: flex;
  align-items: center;
}
.grade-star {
  width: 4vw;
  height: 4vw;
  display: inline-block;
  margin: 0 3rpx;
}
.comment-cols {
  display: flex;
  padding-right: 60rpx;
  justify-content: space-between;
  align-items: center;
}
.comment-col {
  display: inline-block;
  padding: 30rpx;
}
.comment-col-selected {
  border-bottom: 8rpx solid rgb(45, 157, 255);
}
.comment-top {
  display: flex;
  align-items: center;
}
.comment-head-icon {
  width: 15vw;
  height: 15vw;
  margin: 30rpx;
}
.comment-content {
  padding: 30rpx;
}
.pick-him {
  position: absolute;
  display: block;
  z-index: 1;
  right: 30rpx;
  top: 15vh;
  font-size: 0.75rem;
  background-color: rgb(45, 157, 255);
  color: white;
  padding: 5rpx 15rpx;
  border: 1px solid white;
  border-radius: 20px;
}