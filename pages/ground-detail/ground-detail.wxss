/* ground-detail.wxss */
.ground-name {
  margin: 20rpx;
}
.ground-location {
  margin: 20rpx;
}
.grade_star {
  width: 4vw;
  height: 4vw;
  display: inline-block;
}
.grade_star image {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.more {
  height: 7vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.traffic-hint {
  padding:20rpx 30rpx 0;
  line-height: 50rpx;
}

.ground-detail-intro{
  margin: 30rpx 0;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.distance{
  display: inline-block;
  color: white;
  background-color: #2D9DFF;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  margin-right: 30rpx;
 
}