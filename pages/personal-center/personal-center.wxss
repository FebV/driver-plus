/* personal-center.wxss */
.personal-center-banner {
  height: 30vh;
}
.personal-center-banner image {
  width: 100%;
  height: 100%;
}
.userinfo-avatar {
  position: absolute;
  margin: 0 auto;
  z-index: 1;
  left: 50%;
  transform: translateX(-50%);
  width: 25vw;
  border-radius: 50%;
  height: 25vw;
  top: 5vw;
}
.userinfo-nickname {
  position: absolute;
  top: 33vw;
  left: 50%;
  color: white;
  transform: translateX(-50%);
}
.plus-logo {
  width: 100%;
  height: 60vw;
  background-color: rgb(240, 240, 240);
}
.plus-logo image {
  margin-top: 10vw;
  width: 50vw;
  height: 25vw;
  position: absolute;
  left: 25vw;
  margin-bottom: 20vw;
}
.login-btn {
  font-size: 0.8rem;
  color: lightgray;
  position: absolute;
  border: 1px solid white;
  right: 20rpx;
  padding: 3rpx 40rpx;
  top: 30rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 30px;
}